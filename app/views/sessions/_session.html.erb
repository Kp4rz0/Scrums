
<div class="row">
  <div class="col-md-8 col-xs-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |v| %>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :rut %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :rut, class: "form-control", placeholder:"1111111-1",autofocus:true %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :password %>
        </div>
        <div class="control-label col-xs-12 col-md-7">
          <%= v.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-4 col-md-offset-5">
          <%= v.submit "Log in", class: "btn btn-primary", style: "margin-top:10px" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
