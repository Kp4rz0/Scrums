<div class="row">
  <div class="col-md-12 col-xs-12 titulo">
    <h1>Perfil de usuario </h1>
  </div>
</div>

<%= render 'Compartidos/errores', obj: @usuario %>

<div class="row">
  <div class="col-md-8 col-xs-12">
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |v| %>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :rut %>
        </div>
        <div class="control-label col-xs-12 col-md-7">
          <%= v.label @usuario.rut %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :nombre %>
        </div>
          <div class="col-xs-12 col-md-7">
            <%= v.text_field :nombre, class: "form-control",disabled:true %>
          </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :paterno, :"Apellido Paterno" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :paterno, class: "form-control", disabled:true %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :materno, :"Apellido Materno" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :materno, class: "form-control", disabled:true  %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :fecha_nacimiento, :"Fecha de Nacimiento" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.date_field :fecha_nacimiento,  class: "form-control", disabled:true %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :email, :"Correo" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :email,  class: "form-control", disabled:true %>
        </div>
      </div>

      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :institucion, :"InstituciÃ³n" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <input class="form-control" disabled="true" value="<%= @institucion.tag + " | " + @institucion.descripcion %>" >
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :facultade, :"Facultad" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <input class="form-control" disabled="true" value="<%= @facultad.tag + " | " + @facultad.descripcion %>" >
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :departamento, :"Departamento" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <input class="form-control" disabled="true" value="<%= @departamento.tag + " | " + @departamento.descripcion %>" >
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :carrera, :"Carrera" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <input class="form-control" disabled="true" value="<%= @carrera.tag + " | " + @carrera.descripcion %>" >
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :email, :"Email" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :email, class: "form-control", disabled:true   %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-5">
          <%= v.label :password, :"Password" %>
        </div>
        <div class="col-xs-12 col-md-7">
          <%= v.text_field :password, class: "form-control", disabled:true , type: "password"  %>
        </div>
      </div>
      <div class="form-group>">
        <div class="control-label col-xs-12 col-md-4 col-md-offset-5">
          <% if action_name == "new" or action_name == "create"  %>
            <%= v.submit :"Crear Usuario", class: "btn btn-info", style: "margin-top:10px" %>
          <% end %>
          <% if action_name == "edit" %>
            <%= v.submit :"Editar Perfil", class: "btn btn-info", style: "margin-top:10px"  %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-12">
    <div class="col-xs-4" >[<%= link_to "Editar", edit_usuario_path(params[:id]) %>]</div>
    <div class="col-xs-4" >[<%= link_to "Editar", edit_usuario_path(@usuario) %>]</div>
    <div class="col-xs-4" >[<%= link_to "Volver", usuarios_path %>]</div>
  </div>
</div>
