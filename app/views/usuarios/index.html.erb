
<div class="row">
  <div class="col-md-12">
    <h1>listar todos los usuarios</h1>

    <p>
    <%= link_to "Crear un nuevo usuario", new_usuario_path %>
    </p>
  </div>
</div>
<div class="row">
    <div class="col-md-12">
      <table id="Tabla" class="table table-striped cell-border">
        <thead style="background:white"">
          <tr>
            <th>Rut</th>
            <th>Nombre</th>
            <th>Paterno</th>
            <th>Materno</th>
            <th>Editar</th>
            <th>ver</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.rut %> </td>
            <td><%= usuario.nombre %> </td>
            <td><%= usuario.paterno %> </td>
            <td><%= usuario.materno %> </td>
            <td><%= link_to 'editar', edit_usuario_path(usuario) %> </td>
            <td><%= link_to 'ver', usuario_path(usuario) %> </td>
            <td><%= link_to 'eliminar', usuario_path(usuario), method: :delete, data: {confirm: "Estas seguro?"} %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>

</div>
<script>
  $( document ).ready(function() {
                    $("#Tabla").dataTable();
  });
</script>
